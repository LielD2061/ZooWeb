
@{
    ViewData["Title"] = "AdminSelection";
}

<h1>Choose Animal to edit/delete</h1>

@foreach (var item in Model.AllCategories!)
{
    <div class="rounded float-start m-4">

        <a class="btn btn-primary" value="check" asp-action="IndexSpec" asp-controller="Species"
       asp-route-categoryId="@item.CategoryId">
            <img src=@item.AnimalPicture class="myPic image-responsive" />
        </a>

        <br />
        <a class="btn btn-outline-primary m-2" asp-controller="Species" asp-action="IndexSpec"
       asp-route-categoryId="@item.CategoryId"> @item.Name </a>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Portrait</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Delete Animal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var element in Model.AllAnimals!)
        {
            <tr>
                <td>
                    @element.AnimalPicture
                    <div class="rounded float-start m-4">
                    </div>
                </td>
                <td>
                    @element.Name
                </td>
                <td>@element.Description</td>
                <td>
                    <form asp-controller="Admin" asp-action="DeleteAnimal" method="post">
                        <input type="submit" name="AnimalId" value="@element.AnimalId" />
                    </form>
                    <form asp-controller="Admin" asp-action="GetToComments" method="post">
                        <input placeholder="Comments" type="submit" name="AnimalId" value="@element.AnimalId" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

