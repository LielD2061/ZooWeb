@model ThirdWebZoo.Models.User

<h1>Hello And Welcome back</h1>

<form asp-controller="User" asp-action="SignIn" method="post">
    <div class="form-group col-md-6">
        <label for="UserName">User Name</label>
        <input asp-for="UserName" type="text" class="form-control" id="UserName" placeholder="Enter User Name"/>
        <span asp-validation-for="UserName" class="ifValid"></span>
    </div>

    <div class="form-group col-md-6">
        <label for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter your Password"/>
        <span asp-validation-for="Password" class="ifValid"></span>
    </div>

    <button type="submit" class="btn btn-info">Submit</button>
</form>

<a asp-controller="Home" asp-action="Index">Back Home</a>